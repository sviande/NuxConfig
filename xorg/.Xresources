rofi.font:        Fira Code Retina 12
rofi.color-normal:base00, base05, base00, base08, base00
rofi.color-urgent:base00, base09, base00, base09, base00
rofi.color-active:base00, base0B, base00, base0B, base00
rofi.color-window:base00, base01
